{
  "version": 2,
  "builds": [
    {
      "src": "api/proxy.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "/api/proxy.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/proxy.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/proxy.py"
    }
  ],
  "env": {
    "FARCASTER_BASE_URL": "https://client.farcaster.xyz/v2"
  },
  "functions": {
    "api/proxy.py": {
      "maxDuration": 30
    }
  }
}
